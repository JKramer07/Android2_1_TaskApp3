<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.geek.android2_1_taskapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.geek.android2_1_taskapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.geek.android2_1_taskapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/taskFragment"
        android:name="com.geek.android2_1_taskapp.ui.task.TaskFragment"
        android:label="Adding New Task"
        tools:layout="@layout/fragment_task" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.geek.android2_1_taskapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/boardFragment"
        android:name="com.geek.android2_1_taskapp.ui.onboard.BoardFragment"
        android:label="Board"
        tools:layout="@layout/fragment_board" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.geek.android2_1_taskapp.ui.auth.AuthFragment"
        android:label="Authentication"
        tools:layout="@layout/fragment_auth" />
</navigation>