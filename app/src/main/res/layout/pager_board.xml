<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotti"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/onboardingaccount1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/textPagerTitle"
        android:text="TITLE"
        android:textSize="28sp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/lotti"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textPagerDesc"
        android:text="Description Description Description Description Description Description Description Description"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPagerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnStart"
        android:text="START"
        android:textColor="@color/white"
        android:background="@drawable/bg_button"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPagerDesc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>